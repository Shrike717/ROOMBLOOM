
<div class="page-container">
  <%= simple_form_for @moodboard do |f| %> <!-- An empty instance is coming from the home method in pages controller. It has no id. Therefore rails knows it has to hit the create method on moodboards controller-->
    <%= f.submit "start new moodboard", class: "hero-btn"%>
  <% end %>

  <% @moodboards.each do |moodboard| %>
    <div class="container-wrapper cards">
      <div class="container moodboard">
        <h4 class="moodboard-name"><%= moodboard.name %></h4>
      </div>
      <% moodboard.items.sort.each do |item| %>
        <div class="container-item-wrapper">
          <div class="item-image-wrapper">
              <%= cl_image_tag item.photo.key, class: "item-image" %>
          </div>
            <div class="item-info">
              <div><%= item.pretty_name %></div>
          </div>
        </div>
      <% end %>
    </div>

  <% end %>

</div>

